<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="1090.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.WorldBuilderController">
    <VBox alignment="TOP_CENTER" prefHeight="1090.0" prefWidth="1920.0">
        <TextField fx:id="levelNameTextfield" alignment="TOP_CENTER" prefHeight="25.0" prefWidth="1632.0"
                   promptText="Enter Levelname" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets bottom="10.0" left="144.0" right="144.0"/>
            </VBox.margin>
        </TextField>
        <HBox alignment="BOTTOM_CENTER">
            <Button fx:id="deleteEntityButton" mnemonicParsing="false" text="Delete Entity">
                <opaqueInsets>
                    <Insets left="10.0" right="10.0"/>
                </opaqueInsets>
                <HBox.margin>
                    <Insets right="10.0"/>
                </HBox.margin>
            </Button>
            <Button fx:id="wallCreateButton" mnemonicParsing="false" text="Wall">
                <opaqueInsets>
                    <Insets left="10.0" right="10.0"/>
                </opaqueInsets>
                <HBox.margin>
                    <Insets right="10.0"/>
                </HBox.margin>
            </Button>
            <Button fx:id="npcCreateButton" mnemonicParsing="false" text="NPC">
                <opaqueInsets>
                    <Insets left="10.0" right="10.0"/>
                </opaqueInsets>
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
            </Button>
            <ChoiceBox fx:id="npcChoiceBox" prefWidth="150.0">
                <opaqueInsets>
                    <Insets left="10.0" right="10.0"/>
                </opaqueInsets>
                <HBox.margin>
                    <Insets right="10.0"/>
                </HBox.margin>
            </ChoiceBox>
            <Button fx:id="virusColorButton" mnemonicParsing="false" text="Virus">
                <opaqueInsets>
                    <Insets left="10.0" right="10.0"/>
                </opaqueInsets>
                <HBox.margin>
                    <Insets right="10.0"/>
                </HBox.margin>
            </Button>
            <padding>
                <Insets bottom="10.0"/>
            </padding>
        </HBox>
        <Canvas fx:id="paintCanvas" height="900.0" width="1600.0">
            <VBox.margin>
                <Insets left="144.0" right="144.0"/>
            </VBox.margin>
        </Canvas>
        <HBox alignment="BOTTOM_CENTER">
            <padding>
                <Insets bottom="10.0" top="10.0"/>
            </padding>
            <CheckBox fx:id="socialDistancingCheckbox" mnemonicParsing="false" text="Social Distancing">
                <padding>
                    <Insets left="10.0" right="10.0"/>
                </padding>
            </CheckBox>
            <CheckBox fx:id="increasedHygieneCheckbox" mnemonicParsing="false" text="Increased Hygiene">
                <padding>
                    <Insets left="10.0" right="10.0"/>
                </padding>
            </CheckBox>
            <CheckBox fx:id="betterMedicineCheckbox" mnemonicParsing="false" text="Better Medicine">
                <padding>
                    <Insets left="10.0" right="10.0"/>
                </padding>
            </CheckBox>
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </HBox>
        <Label fx:id="statusLabel" alignment="CENTER" contentDisplay="CENTER" textAlignment="CENTER" textFill="RED">
            <padding>
                <Insets bottom="10.0"/>
            </padding>
        </Label>
        <HBox alignment="BOTTOM_CENTER" prefHeight="13.0" prefWidth="1920.0">
            <Button fx:id="deleteAllButton" mnemonicParsing="false" text="New World">
                <HBox.margin>
                    <Insets right="10.0"/>
                </HBox.margin>
            </Button>
            <Button fx:id="loadWorldButton" mnemonicParsing="false" text="Load World"/>
            <ChoiceBox fx:id="loadWorldChoiceBox" prefWidth="150.0">
                <HBox.margin>
                    <Insets right="10.0"/>
                </HBox.margin>
            </ChoiceBox>
            <Button fx:id="saveButton" mnemonicParsing="false" text="Save World" textAlignment="CENTER">
                <opaqueInsets>
                    <Insets left="10.0" right="10.0"/>
                </opaqueInsets>
                <HBox.margin>
                    <Insets right="10.0"/>
                </HBox.margin>
            </Button>
            <Button fx:id="toMainMenuButton" alignment="BOTTOM_CENTER" cancelButton="true" mnemonicParsing="false"
                    text="Back to Main Menu" textAlignment="CENTER"/>
        </HBox>
        <padding>
            <Insets bottom="10.0"/>
        </padding>
    </VBox>
</AnchorPane>
