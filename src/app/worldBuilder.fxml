<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/11.0.1" fx:controller="app.WorldBuilderController">
    <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0">
        <TextField fx:id="levelNameTextfield" alignment="TOP_CENTER" promptText="Enter Levelname"/>
        <Canvas fx:id="paintCanvas" height="375.0" width="600.0"/>
        <HBox alignment="BOTTOM_CENTER" prefHeight="20.0" prefWidth="600.0">
            <Button fx:id="voidColorButton" mnemonicParsing="false" text="Delete"/>
            <Button fx:id="wallColorButton" mnemonicParsing="false" text="Wall"/>
            <Button fx:id="npcColorButton" mnemonicParsing="false" text="NPC"/>
            <Button fx:id="virusColorButton" mnemonicParsing="false" text="Virus"/>
            <Button fx:id="saveButton" mnemonicParsing="false" text="Export Picture" textAlignment="CENTER"/>
            <padding>
                <Insets bottom="10.0"/>
            </padding>
        </HBox>
        <HBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="200.0">
            <padding>
                <Insets bottom="10.0"/>
            </padding>
            <CheckBox fx:id="socialDistancingCheckbox" mnemonicParsing="false" text="Social Distancing">
                <padding>
                    <Insets left="10.0" right="10.0"/>
                </padding>
            </CheckBox>
            <CheckBox fx:id="increasedHygieneCheckbox" mnemonicParsing="false" text="Increased Hygiene">
                <padding>
                    <Insets left="10.0" right="10.0"/>
                </padding>
            </CheckBox>
            <CheckBox fx:id="betterMedicineCheckbox" mnemonicParsing="false" text="Better Medicine">
                <padding>
                    <Insets left="10.0" right="10.0"/>
                </padding>
            </CheckBox>
        </HBox>
        <Label fx:id="statusLabel" alignment="CENTER" contentDisplay="CENTER" textAlignment="CENTER" textFill="RED">
            <padding>
                <Insets bottom="10.0"/>
            </padding>
        </Label>
        <Button fx:id="toMainMenuButton" alignment="BOTTOM_CENTER" cancelButton="true" mnemonicParsing="false"
                text="Back to Main Menu" textAlignment="CENTER"/>
        <padding>
            <Insets bottom="10.0"/>
        </padding>
    </VBox>
</AnchorPane>
